{
  "name": "gfas-react-datagrid",
  "version": "1.0.14",
  "description": "Composable Datagrid for react",
  "main": "./lib/components",
  "module": "./lib/components",
  "scripts": {
    "build": "better-npm-run build",
    "dev": "npm run storybook",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "start": "better-npm-run dev",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "better-npm-run test",
    "test:dev": "npm run test -- --watch",
    "prepublish": "npm run build"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf lib && mkdirp lib && babel ./src/ -d . --ignore __tests__ --out-dir lib && cp src/components/Datagrid/grid.css lib/components/Datagrid/grid.css",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "jest",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "urm:*"
      }
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/shim.js",
      "<rootDir>/test/testSetup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jjordy/gfas-react-components.git"
  },
  "author": "Jordan Addison <jordanrileyaddison@gmail.com> (http://github.com/jjordy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jjordy/Universal-React-Min/issues"
  },
  "homepage": "https://github.com/jjordy/Universal-React-Min",
  "peerDependencies": {
    "prop-types": "15 || 16",
    "react": "15 || 16",
    "react-dom": "15 || 16",
    "react-virtualized": "*",
    "semantic-ui-react": "*"
  },
  "devDependencies": {
    "@storybook/react": "^3.3.15",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-dynamic-import-node": "^1.0.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "better-npm-run": "^0.1.0",
    "css-loader": "^0.28.4",
    "enzyme": "^3.1.0",
    "eslint": "^4.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "file-loader": "^1.1.11",
    "jest": "^22.4.2",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "prismjs": "^1.6.0",
    "raw-loader": "^0.5.1",
    "react": "^16.0.0",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^16.0.0",
    "react-virtualized": "^9.6.0",
    "rimraf": "^2.5.4",
    "semantic-ui-react": "^0.78.3",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-dev-server": "^3.1.1",
    "yargs": "^11.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "dom-helpers": "^3.2.1",
    "enzyme-adapter-react-16": "^1.0.2",
    "fuse.js": "^3.2.0",
    "moment": "^2.19.1",
    "uuid": "^3.1.0"
  }
}
