{
  "version": "2012-10-17",
  "id": "1",
  "statement": [
    {
      "action": "KitchenSinkExample",
      "effect": "Allow",
      "resource": ["userMessage", "form"],
      "conditions": [
        {
          "rules": {
            "includes": {
              "$token.userTypes": "user",
              "$token.groups": "myApp"
            }
          }
        }
      ]
    },
    {
      "action": "KitchenSinkForm",
      "effect": "Allow",
      "resource": [
        "firstName",
        "lastName",
        "physicalAddress1",
        "city",
        "state",
        "zip",
        "rememberMe",
        "submit",
        "parentContainer"
      ],
      "conditions": [
        {
          "rules": {
            "includes": { "$token.userTypes": "administrator", "$claims[].claimValue": "parent" }
          }
        }
      ]
    }
  ]
}
