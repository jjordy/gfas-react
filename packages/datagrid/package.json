{
  "name": "@jjordy/datagrid",
  "version": "1.0.30",
  "description": "Composable Datagrid for react",
  "repository": "jjordy/react-components",
  "main": "./lib/index.js",
  "module": "./lib/es/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node ./tools/build.js",
    "clean": "git clean -fdX .",
    "lint": "eslint src",
    "test": "jest",
    "prepublishOnly": "node ./tools/build.js",
    "watch": "babel ./src/components -d --out-dir lib/es --ignore __tests__ --watch"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/shim.js",
      "<rootDir>/test/testSetup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "peerDependencies": {
    "react": ">=16",
    "styled-components": "3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-imports": "^1.5.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "better-npm-run": "^0.1.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "gzip-size": "^5.0.0",
    "jest": "^23.5.0",
    "mkdirp": "^0.5.1",
    "pretty-bytes": "^5.1.0",
    "pretty-quick": "^1.2.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.60.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "dependencies": {
    "@jjordy/layout": "^0.0.33",
    "date-fns": "^1.29.0",
    "dom-helpers": "^3.2.1",
    "fuse.js": "^3.2.0",
    "lodash.sortby": "^4.7.0",
    "prop-types": "^15.6.1",
    "react-icons": "^3.0.5",
    "react-virtualized": "^9.20.1",
    "uuid": "*"
  }
}
