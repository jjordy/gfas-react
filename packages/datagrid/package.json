{
  "name": "@jjordy/datagrid",
  "version": "1.0.26",
  "description": "Composable Datagrid for react",
  "main": "./lib",
  "module": "./lib",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "better-npm-run build",
    "dev": "npm run build --watch",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "start": "better-npm-run dev",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "better-npm-run test",
    "test:dev": "npm run test -- --watch",
    "prepublish": "npm run build",
    "postversion": "npm run build"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf lib && mkdirp lib && babel ./src/components -d . --ignore __tests__ --out-dir lib",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "jest",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "urm:*"
      }
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/shim.js",
      "<rootDir>/test/testSetup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jjordy/gfas-react-components.git"
  },
  "author": "Jordan Addison <jordanrileyaddison@gmail.com> (http://github.com/jjordy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jjordy/Universal-React-Min/issues"
  },
  "homepage": "https://github.com/jjordy/Universal-React-Min",
  "peerDependencies": {
    "prop-types": "15 || 16",
    "react": "15 || 16",
    "react-dom": "15 || 16",
    "react-virtualized": "*",
    "styled-components": "3"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "better-npm-run": "^0.1.1",
    "eslint": "^5.4.0",
    "jest": "^23.5.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "@jjordy/layout": "^0.0.29",
    "date-fns": "^1.29.0",
    "dom-helpers": "^3.2.1",
    "fuse.js": "^3.2.0",
    "lodash.sortby": "^4.7.0",
    "react-icons": "^3.0.5",
    "uuid": "*"
  }
}
